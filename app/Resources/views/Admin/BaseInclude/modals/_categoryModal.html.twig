<script type="text/ng-template" id="categoryModal.html">
    <div class="modal-container">
        <form class="form" name="createCategoryForm" method="POST" novalidate>
            <div class="collapseable margin-top-40 align-left full-width">
                <p ng-repeat="error in serverErrors track by $index" class="language-error margin-top-10 align-left">{[{ error }]}</p>

                <div class="full-width align-left">
                    <input ng-model="category" type="text" name="category" ng-class="{ 'input-text-error': error.invalid }" class="nav-text-input" required placeholder="category..."/>
                </div>

                <div class="align-right relative margin-top-50 button-wrapper">
                    <img src="{{ asset('images/loading.gif') }}" ng-show="loading" class="loading absolute">
                    <b class="fa fa-check fa-lg success absolute" ng-show="success"></b>
                    <button ng-disabled="disableButton" class="align-right" ng-click="createCategory($event)">Add</button>
                </div>
            </div>
        </form>
    </div>
</script>