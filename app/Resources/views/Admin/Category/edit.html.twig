{% extends '::Admin/base.html.twig' %}

{% block content %}
    <div class="fluid-container page">
        <div class="full-width align-left">
            <h1 class="full-width page-title margin-top-30 align-left">Categories - edit <span class="text-highlight">{{ category.name }}</span> category</h1>
        </div>

            <div class="full-width align-left margin-top-30 page-content form">
                <form action="{{ path('category_edit', { 'id': category.id }) }}" method="POST" class="form" name="editCategoryForm" novalidate>
                    <div class="margin-top-40 align-left full-width">

                        {% include '::Admin/Form/_include/flashNotice.html.twig' %}

                        {% include '::Admin/Form/_include/field.html.twig' with {'field': form.name } only %}

                        <div class="align-right relative margin-top-50 relative button-wrapper">
                            <button type="submit" class="align-right">Edit</button>
                        </div>
                    </div>

                    {{ form_rest(form) }}
                </form>
            </div>
    </div>
{% endblock %}