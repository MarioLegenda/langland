{% extends '::Admin/Course/baseContent.html.twig' %}

{% block content %}
    <div class="fluid-container page language">
        <div class="full-width align-left">
            <h1 class="full-width page-title margin-top-30 align-left">Game type - edit <span class="text-highlight">{{ gameType.name }}</span> game type</h1>
        </div>

        <div class="full-width align-left margin-top-30 page-content form">

            <form action="{{ path('admin_game_type_edit', {'courseId' : course.id, 'gameTypeId': gameType.id }) }}" method="POST" class="form" name="addLessonForm" novalidate>
                <div class="margin-top-40 align-left full-width">
                    <div class="form-error full-width align-right">
                        {{ form_errors(form) }}
                    </div>

                    {% include '::Admin/Form/_include/flashNotice.html.twig' %}

                    {% include '::Admin/Form/_include/field.html.twig' with {'field' : form.name, 'description': 'edit this game type'} only %}

                    {% include '::Admin/Form/_include/field.html.twig' with {'field' : form.serviceName, 'description': 'the name of the underlying service that will handle this game type'} only %}

                </div>

                {% include '::Admin/Form/_include/simpleButton.html.twig' with {'value': 'Edit'} %}
        </div>

        {{ form_widget(form._token) }}
        </form>
    </div>
    </div>
{% endblock %}