{% extends '::Admin/Course/baseContent.html.twig' %}

{% block content %}
    <div class="fluid-container page language">
        <div class="full-width align-left">
            <h1 class="full-width page-title margin-top-30 align-left">Sentences - create new sentence</h1>
        </div>

        <div class="full-width align-left margin-top-30 page-content form">
            <form action="{{ path('sentence_create', {'courseId' : course.id}) }}" method="POST" class="form" name="addSentenceForm" enctype="multipart/form-data" novalidate>
                <div class="margin-top-40 align-left full-width">
                    <div class="form-field field-break full-width align-left">
                        <div class="form-error full-width align-right">
                            {{ form_errors(form) }}
                        </div>
                    </div>

                    {% include '::Admin/Form/_include/flashNotice.html.twig' %}

                    {% include '::Admin/Form/_include/field.html.twig' with {'field' : form.name} only %}

                    {% include '::Admin/Form/_include/field.html.twig' with {'field' : form.sentence} only %}

                    <div class="full-width align-left form-field field-break">
                        {{ form_label(form.sentenceTranslations) }}
                        <div class="translations" data-prototype="{{ form_widget(form.sentenceTranslations.vars.prototype)|e('html_attr') }}">
                            {% for translation in form.sentenceTranslations %}
                                <div class="full-width align-left collection-holder margin-bottom-20">
                                    {{ form_row(translation.name) }}
                                    {{ form_row(translation.markedCorrect) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    {% include '::Admin/Form/_include/simpleButton.html.twig' with {'value': 'Create'} %}
                </div>

                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>
{% endblock %}