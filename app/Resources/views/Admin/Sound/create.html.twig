{% extends '::Admin/baseContent.html.twig' %}

{% block content %}
    <div class="fluid-container page language">
        <div class="full-width align-left">
            <h1 class="full-width page-title margin-top-30 align-left">Sounds - create new sound</h1>
        </div>

        <div class="full-width align-left margin-top-30 page-content form">
            <form action="{{ path('sound_create') }}" method="POST" class="form" name="addSoundForm" enctype="multipart/form-data" novalidate>
                <div class="margin-top-40 align-left full-width">

                    {% include '::Admin/Form/_include/flashNotice.html.twig' %}

                    {% include '::Admin/Form/_include/field.html.twig' with {'field': form.soundFile, 'description': 'add a sound that will later be connected to lessons and courses' } only %}

                    {% include '::Admin/Form/_include/simpleButton.html.twig' with {'value': 'Create'} %}
                </div>

                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}