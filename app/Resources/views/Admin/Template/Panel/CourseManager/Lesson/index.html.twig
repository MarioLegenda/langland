<div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

    <div class="row" style="margin-bottom: 15px;">
        <div class="col-sm-12">
            <div class="dataTables_length" id="dataTables-example_length">
                <a class="btn btn-success" style="float: right" href="{{ path('admin_lesson_create', {courseId: course.id}) }}">Create</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
                <div class="col-sm-12">
                    <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                        <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 205px;">Lesson</th>
                            <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 50px;">Action</th>
                        </tr>
                        </thead>

                        <tbody>

                        {% for lesson in lessons %}
                            <tr class="gradeA odd" role="row">
                                <td class="sorting_1">{{ lesson.jsonLesson.name }}</td>
                                <td class="sorting_1">
                                    <a class="btn btn-primary" style="float: right" href="{{ path('admin_lesson_update_view', {courseId: course.id, lessonId: lesson.id}) }}">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>