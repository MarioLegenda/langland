<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="API\SharedDataBundle\Entity\Language">
        <property name="language">
            <constraint name="NotBlank">
                <option name="message">Language name cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    A language can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\Category">
        <property name="category">
            <constraint name="NotBlank">
                <option name="message">Category cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    A category can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\Theory">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Theory name cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    Theory name can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\TheoryDeck">
        <property name="internalName">
            <constraint name="NotBlank">
                <option name="message">Theory deck name cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    Theory name can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>

        <constraint name="Callback">validateSounds</constraint>
    </class>

    <class name="API\SharedDataBundle\Entity\Course">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Course name cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    A course name can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\Lesson">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Lesson name cannot be empty</option>
            </constraint>

            <constraint name="Length">
                <option name="max">50</option>
                <option name="maxMessage">
                    A lesson name can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\Word">
        <property name="word">
            <constraint name="NotBlank">
                <option name="message">You have to provide a word for translation</option>
            </constraint>

            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">
                    A word can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>

        <property name="image">
            <constraint name="Image">
                <option name="maxSize">10M</option>
                <option name="maxSizeMessage">Image associated to a word can be up to 10MB in size</option>
                <option name="mimeTypes">
                    <value>image/jpeg</value>
                    <value>image/jpg</value>
                    <value>image/png</value>
                </option>
                <option name="mimeTypesMessage">Image type can only be .jpg, .jpeg or .png</option>
            </constraint>
        </property>

        <constraint name="Callback">validate</constraint>

        <property name="translations">
            <constraint name="Valid">
                <option name="traverse">You have to provide a translation for a word</option>
            </constraint>
        </property>
    </class>

    <class name="API\SharedDataBundle\Entity\Sentence">
        <property name="sentence">
            <constraint name="NotBlank">
                <option name="message">You have to provide a sentence</option>
            </constraint>

            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">
                    A word can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>

        <constraint name="Callback">validate</constraint>

        <property name="internalName">
            <constraint name="NotBlank">
                <option name="message">You have to provide an internal name</option>
            </constraint>

            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">
                    Internal name can have up to {{ limit }} characters
                </option>
            </constraint>
        </property>

        <property name="translations">
            <constraint name="Valid">
                <option name="traverse">You have to provide a translation for a word</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>