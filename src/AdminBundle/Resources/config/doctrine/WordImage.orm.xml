<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AdminBundle\Entity\WordImage" table="word_images">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="255" />
        <field name="originalName" type="string" length="255" />
        <field name="targetDir" type="string" length="255" />


        <many-to-one field="word" target-entity="AdminBundle\Entity\Word">
            <join-column name="word_id" referenced-column-name="id" />
        </many-to-one>

    </entity>
</doctrine-mapping>