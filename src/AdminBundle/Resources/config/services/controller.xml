<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.learning_metadata.controller.dashboard_controller"
                class="Library\LearningMetadata\Business\Controller\DashboardController">

            <argument type="service" id="langland.learning_metadata.presentation.template_wrapper" />
        </service>

        <service
                id="langland.learning_metadata.controller.language_controller"
                class="Library\LearningMetadata\Business\Controller\LanguageController">

            <argument type="service" id="langland.learning_metadata.business.implementation.language_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.category_controller"
                class="Library\LearningMetadata\Business\Controller\CategoryController">

            <argument type="service" id="langland.learning_metadata.business.implementation.category_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.word_controller"
                class="Library\LearningMetadata\Business\Controller\WordController">

            <argument type="service" id="langland.learning_metadata.business.implementation.word_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.language_info_controller"
                class="Library\LearningMetadata\Business\Controller\LanguageInfoController">

            <argument type="service" id="langland.learning_metadata.business.implementation.language_info_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.sound_controller"
                class="Library\LearningMetadata\Business\Controller\SoundController">

            <argument type="service" id="langland.learning_metadata.business.implementation.sound_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.course_controller"
                class="Library\LearningMetadata\Business\Controller\CourseController">

            <argument type="service" id="langland.learning_metadata.business.implementation.course_implementation" />
        </service>

        <service
                id="langland.learning_metadata.controller.lesson_controller"
                class="Library\LearningMetadata\Business\Controller\CourseManagment\LessonController">

            <argument type="service" id="langland.learning_metadata.business.implementation.lesson_implementation" />
            <argument type="service" id="langland.learning_metadata.business.implementation.course_implementation" />
        </service>
    </services>
</container>