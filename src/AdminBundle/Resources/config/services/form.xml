<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.learning_metadata.form.language_choice"
                class="Library\Infrastructure\Form\LanguageChoiceFormService">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="request_stack" />
        </service>

        <service
                id="langland.learning_metadata.form.category_choice"
                class="Library\Infrastructure\Form\CategoryChoiceFormService">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="request_stack" />
        </service>

        <service
                id="langland.learning_metadata.form.word"
                class="Library\LearningMetadata\Infrastructure\Form\Type\WordType">

            <argument type="service" id="langland.learning_metadata.form.language_choice" />
            <argument type="service" id="langland.learning_metadata.form.category_choice"/>

            <tag name="form.type" />
        </service>

        <service
                id="langland.learning_metadata.form.image"
                class="Library\LearningMetadata\Infrastructure\Form\Type\ImageType">

            <tag name="form.type" />
        </service>

        <service
                id="langland.learning_metadata.form.language_info"
                class="Library\LearningMetadata\Infrastructure\Form\Type\LanguageInfoType">

            <argument type="service" id="langland.learning_metadata.form.language_choice" />
            <argument type="service" id="langland.learning_metadata.form.category_choice"/>

            <tag name="form.type" />
        </service>

        <service
                id="langland.learning_metadata.form.language_info_text"
                class="Library\LearningMetadata\Infrastructure\Form\Type\LanguageInfoTextType">

            <tag name="form.type" />
        </service>

        <service
                id="langland.learning_metadata.form.course"
                class="Library\LearningMetadata\Infrastructure\Form\Type\CourseType">
            <argument type="service" id="langland.learning_metadata.form.language_choice" />

            <tag name="form.type" />
        </service>

        <service
                id="langland.learning_metadata.form.form_builder"
                class="Library\LearningMetadata\Infrastructure\Form\FormBuilder">

            <argument type="service" id="form.factory" />
        </service>
    </services>
</container>