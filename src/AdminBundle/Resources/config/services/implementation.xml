<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.learning_metadata.business.implementation.language_implementation"
                class="Library\LearningMetadata\Business\Implementation\LanguageImplementation">

            <argument type="service" id="langland.learning_metadata.repository.implementation.language_implementation" />
            <argument type="service" id="langland.learning_metadata.repository.implementation.image_implementation" />
            <argument type="service" id="langland.learning_metadata.form.form_builder" />
            <argument type="service" id="langland.learning_metadata.presentation.template_wrapper" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="session" />
        </service>

        <service
                id="langland.learning_metadata.business.implementation.category_implementation"
                class="Library\LearningMetadata\Business\Implementation\CategoryImplementation">

            <argument type="service" id="langland.learning_metadata.repository.implementation.category_implementation" />
            <argument type="service" id="langland.learning_metadata.form.form_builder" />
            <argument type="service" id="langland.learning_metadata.presentation.template_wrapper" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="session" />
        </service>

        <service
                id="langland.learning_metadata.business.implementation.word_implementation"
                class="Library\LearningMetadata\Business\Implementation\WordImplementation">

            <argument type="service" id="langland.learning_metadata.repository.implementation.word_implementation" />
            <argument type="service" id="langland.learning_metadata.repository.implementation.image_implementation" />
            <argument type="service" id="langland.learning_metadata.form.form_builder" />
            <argument type="service" id="langland.learning_metadata.presentation.template_wrapper" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="session" />
        </service>
    </services>
</container>