<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.learning_metadata.repository.language"
                class="Library\LearningMetadata\Repository\Implementation\LanguageRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Language</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.image"
                class="Library\LearningMetadata\Repository\Implementation\ImageRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Image</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.category"
                class="Library\LearningMetadata\Repository\Implementation\CategoryRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Category</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.word"
                class="Library\LearningMetadata\Repository\Implementation\WordRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Word</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.language_info"
                class="Library\LearningMetadata\Repository\Implementation\LanguageInfoRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\LanguageInfo</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.language_info_text"
                class="Library\LearningMetadata\Repository\Implementation\LanguageInfoTextRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\LanguageInfoText</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.sound"
                class="Library\LearningMetadata\Repository\Implementation\SoundRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Sound</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.course"
                class="Library\LearningMetadata\Repository\Implementation\CourseRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Course</argument>
        </service>

        <service
                id="langland.learning_metadata.repository.lesson"
                class="Library\LearningMetadata\Repository\Implementation\CourseManagment\LessonRepository">

            <factory service="doctrine.orm.default_entity_manager" method="getRepository" />

            <argument>AdminBundle\Entity\Lesson</argument>
        </service>

    </services>
</container>