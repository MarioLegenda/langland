<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="public_api.lesson_value_resolver"
                class="LearningMetadata\Infrastructure\Resolver\LessonValueResolver" public="true">

            <argument type="service" id="learning_metadata.repository.lesson" />

            <tag name="controller.argument_value_resolver" priority="50" />
        </service>

        <service
                id="public_api.resolver.lesson_view_resolver"
                class="LearningMetadata\Infrastructure\Resolver\LessonViewResolver" public="true">

            <argument type="service" id="library.deserializer" />
            <argument type="service" id="library.model_validator" />
            <argument type="service" id="learning_metadata.repository.language" />

            <tag name="controller.argument_value_resolver" priority="50" />
        </service>

    </services>
</container>