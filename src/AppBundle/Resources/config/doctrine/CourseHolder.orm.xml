<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\CourseHolder" table="course_holders">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>

        <many-to-one target-entity="AppBundle\Entity\LearningUser" field="learningUser" inversed-by="courseHolders">

        </many-to-one>

        <one-to-one field="language" target-entity="AdminBundle\Entity\Language" />

        <one-to-many target-entity="AppBundle\Entity\LearningUserCourse" mapped-by="courseHolder" field="learningUserCourses" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>

    </entity>
</doctrine-mapping>