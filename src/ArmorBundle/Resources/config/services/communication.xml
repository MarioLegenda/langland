<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="armor.communicator_session.language_session"
                class="Armor\Infrastructure\Communication\LanguageSessionCommunicator" public="true">

            <argument type="service" id="armor.repository.language_repository" />
            <argument type="service" id="library.serializer_wrapper" />
        </service>

        <service id="armor.communication.public_api_language_communicator"
                 class="Armor\Infrastructure\Communication\PublicApiLanguageCommunicator">

            <argument type="service" id="armor.repository.public_api_language" />
        </service>

    </services>
</container>