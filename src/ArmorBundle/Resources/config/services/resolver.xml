<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="armor.resolver.language_session_communicator"
                class="Armor\Infrastructure\Communicator\Session\LanguageSessionCommunicator" public="true">

            <argument type="service" id="armor.repository.language_repository" />
            <argument type="service" id="library.serializer_wrapper" />

            <tag name="controller.argument_value_resolver" priority="50" />
        </service>

    </services>
</container>