<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="learning_system.repository.blue_dot.game"
                class="LearningSystem\Business\Repository\GameRepository"
                public="true">

            <argument type="service" id="common.blue_dot" />
            <argument>public_api_game</argument>
            <argument type="service" id="public_api.repository.learning_system.game_repository" />
            <argument type="service" id="public_api.repository.learning_system.data_collector" />
            <argument type="service" id="public_api.repository.learning_system.learning_metadata" />
            <argument type="service" id="public_api.repository.learning_system.learning_game_challenge_repository" />
            <argument type="service" id="public_api.repository.learning_system.learning_game_data_repository" />
        </service>
    </services>
</container>