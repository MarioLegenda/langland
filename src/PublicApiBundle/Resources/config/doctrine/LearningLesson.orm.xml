<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
            name="PublicApiBundle\Entity\LearningLesson"
            table="learning_lessons">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>

        <many-to-one target-entity="AdminBundle\Entity\Lesson" field="lesson" />

        <!-- Learning metadata dependency, has to be removed -->
        <many-to-one field="learningUser" target-entity="PublicApiBundle\Entity\LearningUser" />
        <many-to-one field="learningMetadata" target-entity="PublicApiBundle\Entity\LearningMetadata" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>

    </entity>
</doctrine-mapping>