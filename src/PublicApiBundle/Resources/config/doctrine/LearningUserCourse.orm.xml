<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="PublicApiBundle\Entity\LearningUserCourse" table="learning_user_courses">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="hasPassed" type="boolean" column="has_passed" />
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>

        <many-to-one target-entity="PublicApiBundle\Entity\CourseHolder" field="courseHolder" inversed-by="learningUserCourses">

        </many-to-one>

        <one-to-one field="course" target-entity="AdminBundle\Entity\Course" />

        <one-to-many target-entity="PublicApiBundle\Entity\LearningUserLesson" mapped-by="learningUserCourse" field="learningUserLessons" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updateTimestamps" />
            <lifecycle-callback type="preUpdate" method="updateTimestamps" />
        </lifecycle-callbacks>

    </entity>
</doctrine-mapping>