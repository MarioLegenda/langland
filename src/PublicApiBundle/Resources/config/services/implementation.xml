<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.public_api.business.implementation.lesson"
                class="PublicApi\Lesson\Business\Implementation\LessonImplementation" public="true">

            <argument type="service" id="langland.public_api.repository.lesson" />
            <argument type="service" id="library.common_serializer" />
        </service>

        <service
                id="langland.public_api.business.implementation.language"
                class="PublicApi\Language\Business\Implementation\LanguageImplementation" public="true">

            <argument type="service" id="langland.public_api.repository.language" />
            <argument type="service" id="langland.public_api.repository.repository_communicator" />
        </service>

        <service
                id="langland.public_api.business.implementation.learning_user"
                class="PublicApi\LearningUser\Business\Implementation\LearningUserImplementation" public="true">

            <argument type="service" id="langland.public_api.repository.learning_user" />
            <argument type="service" id="langland.public_api.repository.language" />
            <argument type="service" id="armor.repository.user" />
        </service>
    </services>
</container>