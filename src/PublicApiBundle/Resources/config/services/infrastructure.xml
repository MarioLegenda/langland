<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="langland.public_api.infrastructure.rule_resolver"
                class="PublicApi\LearningSystem\RuleResolver">

            <argument type="service" id="langland.public_api.question_answers_application_provider" />
        </service>

        <service
                id="langland.public_api.infrastructure.data_collector"
                class="PublicApi\LearningSystem\DataCollector\DataCollector">

            <argument type="service" id="langland.public_api.repository.lesson" />
            <argument type="service" id="langland.public_api.repository.word" />
            <argument type="service" id="langland.public_api.infrastructure.rule_resolver" />
        </service>

    </services>
</container>