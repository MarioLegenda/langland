<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.public_api.repository.lesson"
                class="Library\Lesson\Repository\LessonRepository">

            <factory class="Library\Infrastructure\Repository\RepositoryFactory" method="getRepository"/>

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>AdminBundle\Entity\Lesson</argument>
            <argument>Library\Lesson\Repository\LessonRepository</argument>
        </service>
    </services>
</container>