<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="public_api.repository.learning_user"
                class="PublicApi\LearningUser\Repository\LearningUserRepository"
                public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningUser</argument>
        </service>

        <service
                id="public_api.repository.repository_communicator"
                class="PublicApi\Infrastructure\Communication\RepositoryCommunicator"
                public="true">

            <argument type="service" id="armor.provider.language_session" />
            <argument type="service" id="public_api.repository.language" />
            <argument type="service" id="public_api.repository.learning_user" />
            <argument type="service" id="learning_metadata.repository.lesson" />
            <argument type="service" id="public_api.repository.learning_system.learning_lesson" />
            <argument type="service" id="public_api.repository.word" />
            <argument type="service" id="library.serializer_wrapper" />

        </service>

        <service
                id="public_api.repository.learning_system.data_collector"
                class="PublicApi\LearningSystem\Repository\DataCollectorRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\DataCollector</argument>
        </service>

        <service
                id="public_api.repository.learning_system.learning_metadata"
                class="PublicApi\LearningSystem\Repository\LearningMetadataRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningMetadata</argument>
            <argument type="service" id="router" />
            <argument type="service" id="public_api.repository.lesson" />
            <argument type="service" id="public_api.repository.repository_communicator" />
            <argument type="service" id="public_api.repository.learning_system.learning_lesson" />
            <argument type="service" id="public_api.repository.learning_system.data_collector" />
        </service>

        <service
                id="public_api.repository.learning_system.learning_lesson"
                class="PublicApi\LearningSystem\Repository\LearningLessonRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningLesson</argument>
        </service>

        <service
                id="public_api.repository.learning_system.word_data_repository"
                class="PublicApi\LearningSystem\Repository\WordDataRepository" public="true">

            <argument type="service" id="common.blue_dot" />
            <argument>learning_user_metadata</argument>
            <argument type="service" id="public_api.repository.repository_communicator" />
        </service>

        <service
                id="public_api.repository.learning_system.learning_game_repository"
                class="PublicApi\LearningSystem\Repository\LearningGameRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningGame</argument>

        </service>

        <service
                id="public_api.repository.learning_system.learning_game_challenge_repository"
                class="PublicApi\LearningSystem\Repository\LearningGameChallengeRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningGameChallenge</argument>

        </service>

        <service
                id="public_api.repository.learning_system.learning_game_data_repository"
                class="PublicApi\LearningSystem\Repository\LearningGameDataRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningGameData</argument>

        </service>

    </services>
</container>