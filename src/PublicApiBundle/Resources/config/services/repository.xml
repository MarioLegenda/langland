<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="langland.public_api.repository.lesson"
                class="PublicApi\Lesson\Repository\LessonRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>AdminBundle\Entity\Lesson</argument>
        </service>

        <service
                id="langland.public_api.repository.language"
                class="PublicApi\Language\Repository\LanguageRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>AdminBundle\Entity\Language</argument>
        </service>

        <service
                id="langland.public_api.repository.learning_user"
                class="PublicApi\LearningUser\Repository\LearningUserRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>PublicApiBundle\Entity\LearningUser</argument>
        </service>

        <service
                id="langland.public_api.repository.language_info"
                class="PublicApi\Language\Repository\LanguageInfoRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>AdminBundle\Entity\LanguageInfo</argument>
        </service>

        <service
                id="langland.public_api.repository.word"
                class="PublicApi\Infrastructure\Repository\WordRepository" public="true">

            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>AdminBundle\Entity\Word</argument>
        </service>

        <service
                id="langland.public_api.repository.repository_communicator"
                class="PublicApi\Infrastructure\Communication\RepositoryCommunicator" public="true">

            <argument type="service" id="langland.public_api.repository.language" />
            <argument type="service" id="langland.public_api.repository.learning_user" />
        </service>

        <service
                id="langland.public_api.repository.blue_dot.learning_metadata"
                class="PublicApi\LearningUser\Repository\LearningMetadataRepository" public="true">

            <argument type="service" id="langland.common.blue_dot" />
            <argument>learning_user_metadata</argument>
        </service>

        <service
                id="langland.public_api.repository.blue_dot.lesson"
                class="PublicApi\Lesson\Repository\BlueDot\LessonRepository" public="true">

            <argument type="service" id="langland.common.blue_dot" />
            <argument>public_api_lesson</argument>
        </service>

    </services>
</container>